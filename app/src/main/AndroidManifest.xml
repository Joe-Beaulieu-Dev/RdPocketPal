<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rdpocketpal2">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Home -->
        <activity android:name=".home.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Predictive Equations -->
        <activity
            android:name=".predictiveequations.PredictiveEquationsActivity"
            android:label="@string/title_predictive_equations"
            android:parentActivityName=".home.HomeActivity" />

        <!-- Quick Method -->
        <activity
            android:name=".quickmethod.QuickMethodActivity"
            android:label="@string/title_quick_method"
            android:parentActivityName=".home.HomeActivity" />

        <!-- Conversions -->
        <activity
            android:name=".conversions.ConversionActivity"
            android:label="@string/title_conversions"
            android:parentActivityName=".home.HomeActivity" />

    </application>

</manifest>