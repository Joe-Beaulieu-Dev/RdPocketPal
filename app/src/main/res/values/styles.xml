<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SexSelectionBtn" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:background">@drawable/radio_btn_selector</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:textColor">@drawable/radio_btn_text_color_selector</item>
    </style>

    <style name="ClearBtn" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_clear</item>
    </style>

    <style name="CalculateBtn" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_calculate</item>
    </style>

    <style name="ClearBtnSmall" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:minHeight">32dp</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:background">@drawable/btn_clear</item>
    </style>

    <style name="CalculateBtnSmall" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:minHeight">32dp</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:background">@drawable/btn_calculate</item>
    </style>

</resources>
