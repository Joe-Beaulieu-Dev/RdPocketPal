<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Base attributes -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- View attributes -->
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="cardViewStyle">@style/CardViewCustomLight</item>

        <!-- AlertDialog -->
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
    </style>

    <!-- Splash Screen -->
    <style name="AppTheme.SplashScreen">
        <!-- Get rid of ActionBar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Set background -->
        <item name="android:windowBackground">@drawable/splash_background_and_brocc</item>
    </style>

    <!-- AlertDialog -->
    <style name="AlertDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <!-- Background color -->
        <item name="android:windowBackground">@color/cardViewBackgroundLight</item>
        <!-- Buttons -->
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <!-- AlertDialog text color -->
        <item name="android:textColorPrimary">@color/matte_black</item>
    </style>

    <!-- AlertDialog Negative Button -->
    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/btnPink</item>
    </style>

    <!-- AlertDialog Positive Button -->
    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/btnGreen</item>
    </style>

    <!-- CardView light -->
    <style name="CardViewCustomLight" parent="CardView">
        <item name="cardBackgroundColor">@color/cardViewBackgroundLight</item>
        <item name="cardCornerRadius">6dp</item>
    </style>

    <!-- CardView header light -->
    <style name="CardViewHeaderCustomLight" parent="CardView">
        <item name="cardBackgroundColor">@color/headerBackground</item>
        <item name="cardCornerRadius">0dp</item>
    </style>

    <!-- Sex Selection Button -->
    <style name="SexSelectionBtn" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:background">@drawable/radio_btn_selector</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:textColor">@drawable/radio_btn_text_color_selector</item>
    </style>

    <!-- Clear Button -->
    <style name="ClearBtn" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_clear</item>
    </style>

    <!-- Calculate Button -->
    <style name="CalculateBtn" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_calculate</item>
    </style>

    <!-- Clear Button Small -->
    <style name="ClearBtnSmall" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:minHeight">32dp</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:background">@drawable/btn_clear</item>
    </style>

    <!-- Calculate Button Small -->
    <style name="CalculateBtnSmall" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:minHeight">32dp</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:background">@drawable/btn_calculate</item>
    </style>

    <!-- NumberPickerDialog -->
    <style name="NumberPickerDialog" parent="Preference.DialogPreference">
        <item name="android:textSize">@dimen/font_size_extra_large</item>
        <!-- Number color -->
        <item name="android:textColorPrimary">@color/matte_black</item>
        <!-- Divider color -->
        <item name="android:textColorSecondary">@color/matte_black</item>
    </style>

</resources>
